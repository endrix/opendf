// portChecks.cal

actor portChecks() inPort ==> outPort :

  goodAction: action inPort:[i] ==> outPort:[i] end

  goodAnonymousAction: action [i] ==> [i] end

  undefinedRead: action undefinedInputPort:[ i ] ==> end   
  
  undefinedWrite: action ==> undefinedOutputPort:[ 0 ] end   
  
  readFromOutput: action outPort:[ i ] ==> end
  
  writeToInput: action ==> inPort:[ 0 ] end

  multipleReads: action inPort:[i], inPort:[x] ==> outPort:[i] end

  multipleWrites: action inPort:[i] ==> outPort:[i], outPort:[i] end
  
  illegalNumberOfAnonymousInputPatterns: action [i], [j] ==> end

  illegalNumberOfAnonymousOutputPatterns: action ==> [1], [2] end

  mixingAnonymousInputPatterns: action inPort: [i], [j] ==> end

  mixingAnonymousOutputPatterns: action ==> outPort: [1], [2] end

end
