
actor Mapper (zoom = 1) In ==> X, Y, R, G, B:

	action [p] ==> 	X: [ [zoom * x + i : for i,j in 0..zoom-1] ] repeat zoom2, 
					Y: [ [zoom * y + j : for i,j in 0..zoom-1] ] repeat zoom2, 
					R: [vs] repeat zoom2, 
					G: [vs] repeat zoom2, 
					B: [vs] repeat zoom2
	var
		x = p[0],
		y = p[1],
		vs = if p[2] = 0 then zero else one  end
	end
	
	zoom2 = zoom * zoom;
	one = [0 : for i in zoom2];
	zero = [255 : for i in zoom2]; 	
end