actor SampleColorer (maxIter, satLevels) N ==> R, G, B:

	action [n] ==> [r], [g], [b]
	var
		ncol = n / satLevels,
		nsat = n mod satLevels,
		color = if n >= maxIter then mbColor else saturate(nsat, colors[ncol mod #colors]) end,
		r = 1.0 * color[0],
		g = 1.0 * color[1],
		b = 1.0 * color[2]
	end
	
	colors = [
		[1, 0, 0],
		[0, 0, 1],
		[0, 1, 0]
	];
	
	mbColor = [0, 0, 0];
	
	satBase = 0.25;
	
	function saturate (nsat, c) 
	var
		p = satBase + ((nsat + 1.0) / satLevels) * (1 - satBase),
		g = (1.0 - p) * ((c[0] + c[1] + c[2]) / 3)
	:
		[c[i] * p + g : for i in Integers(0, 2)]
	end
	
end
