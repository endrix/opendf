import all caltrop.lib.BitOps;

actor GEN_mgnt_DCSplit ( int SAMPLE_SZ ) int(size=SAMPLE_SZ) IN ==> int(size=SAMPLE_SZ) DC, int(size=SAMPLE_SZ) AC :

  action IN:[ x ] repeat 64 ==> DC:[ x[0] ], AC:[ ac ] repeat 63
  var
    List(type:int(size=SAMPLE_SZ), size=63) ac:=[0 : for k in Integers(1,63)],
    int i
  do
    i:=0;
    while (i<63) do
      ac[i] := x[i+1];
      i:=i+1;
    end
  end

end
