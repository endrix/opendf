actor GEN_mgnt_Merger420 (int PIX_SZ) int(size=9) Y, int(size=9) U, int(size=9) V ==> int(size=9) YUV :

// Select the Y blocks 
Y:action Y:[y] repeat 4*64 ==> YUV:[ y ] repeat 256 end

// Select the U blocks 
U:action U:[u] repeat 64 ==> YUV:[ u ] repeat 64 end

// Select the V blocks 
V:action V:[v] repeat 64 ==> YUV:[ v ] repeat 64 end

schedule fsm Y :
   Y     ( Y ) --> U ;
   U     ( U ) --> V ;
   V     ( V ) --> Y ;
 end

end