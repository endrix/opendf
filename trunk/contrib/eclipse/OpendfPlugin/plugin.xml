<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="CAL Editor"
            extensions="cal"
            icon="icons/actor.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="net.sf.opendf.eclipse.plugin.editors.CALEditor"
            id="net.sf.opendf.eclipse.plugin.editors.CAL">
      </editor>
      <editor
            class="net.sf.opendf.eclipse.plugin.editors.NLEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="nl"
            icon="icons/network.gif"
            id="net.sf.opendf.eclipse.plugin.editors.NL"
            name="NL Editor"/>
   </extension>
   <extension
         id="net.sf.opendf.eclipse.plugin.launcher"
         name="Dataflow Simulation"
         point="org.eclipse.debug.core.launchConfigurationTypes">
         <launchConfigurationType
               delegate="net.sf.opendf.eclipse.plugin.launcher.OpendfLaunchDelegate"
               delegateDescription="The Opendf System Launcher supports the running and debugging of dataflow systems."
               delegateName="Dataflow System"
               id="net.sf.opendf.eclipse.plugin.launcher"
               modes="run, debug"
               name="Dataflow System"
               public="true"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="net.sf.opendf.eclipse.plugin.editors.CALEditor"
            class="net.sf.opendf.eclipse.plugin.editors.util.CALBreakpointAdapterFactory">
         <adapter
               type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="net.sf.opendf.eclipse.plugin.editors.CAL.ToggleBreakpointContribution"
            targetID="net.sf.opendf.eclipse.plugin.editors.CAL">
         <action
               actionID="RulerDoubleClick"
               class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate"
               id="org.eclipse.debug.ui.actions.ToggleBreakpointAction"
               label="Toogle Breakpoint">
         </action>
      </editorContribution>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="net.sf.opendf.eclipse.plugin.launcher"
            icon="icons/entity.gif"
            id="net.sf.opendf.eclipse.plugin.launcher.image"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="net.sf.opendf.eclipse.plugin.launcher.tabs.LauncherTabGroup"
            id="net.sf.opendf.eclipse.plugin.launcher.tabgroup"
            type="net.sf.opendf.eclipse.plugin.launcher"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
            class="net.sf.opendf.eclipse.plugin.debug.util.CALSourceLookupDirector"
            id="net.sf.opendf.eclipse.plugin.CALSourceLookupDirector"
            name="CALSourceLookupDirector">
      </sourceLocator>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourcePathComputers">
      <sourcePathComputer
            class="net.sf.opendf.eclipse.plugin.debug.util.CALSourcePathComputerDelegate"
            id="net.sf.opendf.eclipse.plugin.CALSourcePathComputer">
      </sourcePathComputer>
   </extension>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="net.sf.opendf.eclipse.plugin.debug.model.CALBreakpoint"
            id="CAL_BREAKPOINT"
            markerType="net.sf.opendf.eclipse.plugin.CALMARKER_BREAKPOINT">
      </breakpoint>
   </extension>

</plugin>
