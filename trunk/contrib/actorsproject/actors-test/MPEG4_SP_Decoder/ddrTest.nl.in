        sourceMBD = art_Source_txt(fileName = "@datadir@/actors-test/MPEG4_SP_Decoder/input/ddrTest/MBD.txt");

        sourceMBA = art_Source_txt(fileName = "@datadir@/actors-test/MPEG4_SP_Decoder/input/ddrTest/MBA.txt");

        sourceMCA = art_Source_txt(fileName = "@datadir@/actors-test/MPEG4_SP_Decoder/input/ddrTest/MCA.txt");

        seq = DDRSeq(BTYPE_SZ=BTYPE_SZ, NEWVOP=NEWVOP, INTRA=INTRA);

        ddr = art_DDRModel(MAXW_IN_MB = 121, MAXH_IN_MB = 69);

        sinkRD = art_Sink_txt(fileName = "./output/ddrTest/RD.txt");

structure
        sourceBTYPE.Out --> seq.BTYPE;
	sourceMBA.Out --> seq.MbaIn;
	sourceMCA.Out --> seq.McaIn;
        sourceMBD.Out --> ddr.WD {bufferSize = 100;};

	seq.MbaOut --> ddr.WA {bufferSize = 100;};
	seq.McaOut --> ddr.RA {bufferSize = 100;};

        ddr.RD --> sinkRD.In;
end
